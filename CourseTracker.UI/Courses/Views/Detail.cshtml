@model VmCourse
@using CourseTracker.UI.Courses.Models
@using CourseTracker.UI.Models

@{

    string heading = Model.Id == null ? "Add New Course" : $"Course: {Model.Name}";
    EntityIds entityIds = ViewBag.EntityIds;

}

<h1>@heading</h1>

<form>

    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)

    @Html.EditorFor(x => x.Name, "Question", new { inputControl = Html.TextBoxFor(x => x.Name, new { @class = "form-control w-50" }) })

    @Html.EditorFor(x => x.Semester, "Question", new { inputControl = Html.TextBoxFor(x => x.Semester, new { @class = "form-control w-50" }) })

    <div class="mt-3">

        <input type="submit" value="Save" id="btnSave" class="btn btn-primary mr-2" formaction=@Url.Action("Detail", "Courses")
               formmethod="post" />

        @Html.ActionLink("Cancel", "Detail", "SchoolYears", new { syid = entityIds.SchoolYear.Value.Key }, new { @class = "btn btn-secondary" })

        @if (Model.Id != null)
        {
            @Html.ActionLink("Delete", "Delete", "Courses", null, new { @class = "btn btn-danger" })
        }

    </div>

</form>

@if (Model.Id != null)
{

    <section class="panel panel-default mt-3">

        <div class="panel-heading">
            <h3 class="panel-title">Courses</h3>
        </div>

        <div class="panel-body">

            <div class="row mt-3">
                <div class="col-md-12">
                    @Html.ActionLink("Add Assessment", "Detail", "Assessments", null, new { @class = "btn btn-primary" })
                </div>
            </div>

            <div class="table-responsive">
                <table id="tblSchoolYears" class="table table-striped">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>Year #</th>
                            <th>Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* @foreach (CoursesListItemModel course in courses)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink("Details", "Detail", "Courses", new { @cid = course.Id })
                                </td>
                                <td>
                                    @course.Name
                                </td>
                                <td>
                                    @course.Semester
                                </td>
                            </tr>
                        } *@
                    </tbody>
                </table>
            </div>

        </div>

    </section>

}